@model TestingAndCalibrationLabs.Web.UI.Models.UiPageValidation.UiPageValidationModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UiPageValidationModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           

            <label for="UiPage">Select Page :</label>

            <select asp-for="UiPageId">
               @foreach (var item in ViewBag.Page)
              {
                  
                      if (@item.PageId == @ViewBag.pid)
                  {
                      <option value=@item.PageId selected>@item.PageName</option>
                  }
                 
                 
                   <option value=@item.PageId>@item.PageName</option>
              }
            </select>

            <label for="UiPageMetadataType">Select Metadata:</label>

            <select asp-for="UiPageMetadataId">
               @foreach (var item in ViewBag.Meta)
              {
                  
                      if (@item.MetadataId == @ViewBag.mid)
                  {
                      <option value=@item.MetadataId selected>@item.MetadataName</option>
                  }
                 
                 
                   <option value=@item.MetadataId>@item.MetadataName</option>
              }
            </select>

           
            <label for="UiPageValidationType">Select Validation:</label>

            <select asp-for="UiPageValidationId">
               @foreach (var item in ViewBag.Val)
              {
                  
                      if (@item.ValId == @ViewBag.vid)
                  {
                      <option value=@item.ValId selected>@item.ValName</option>
                  }
                 
                 
                   <option value=@item.ValId>@item.ValName</option>
              }
            </select>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
