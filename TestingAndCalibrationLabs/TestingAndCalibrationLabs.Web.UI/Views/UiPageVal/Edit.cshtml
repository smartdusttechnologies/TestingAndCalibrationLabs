@model TestingAndCalibrationLabs.Web.UI.Models.UiPageValidation.UiPageValidationModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Ui Page Validation</h1>

<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" _lpchecked="1" class="mb-2" id="valForm" method="post" asp-controller="UiPageVal" novalidate>
            <div asp-validation-summary="All"></div>
            <div class="row ms-1 me-1">
                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element right-pd-input">
                    <label for="UiPageId" class="form-label"></label>
                    <select class="form-input " name="UiPageId" id="uipageonType" onchange="this.setAttribute('value',this.value)" asp-for="UiPageId">
                        
                        @foreach (var item in ViewBag.Page)
                        {
                            if (@item.PageId == @ViewBag.pid)
                        {
                            <option value=@item.PageId selected>@item.PageName</option>
                        }
                            <option value=@item.PageId>@item.PageName</option>
                        }
                    </select>
                </div>
                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element right-pd-input">
                    <label for="UiControlDisplayName" class="form-label"></label>
                    <select class="form-input " name="UiPageMetadataId" id="uimetadataType" onchange="this.setAttribute('value',this.value)" asp-for="UiPageMetadataId">
                       
                        @foreach (var item in ViewBag.Meta)
                        {
                            if (@item.MetadataId == @ViewBag.mid)
                        {
                            <option value=@item.MetadataId selected>@item.MetadataName</option>
                        }
                            <option value=@item.MetadataId>@item.MetadataName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row ms-1 me-1">
                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element right-pd-input">
                    <label for="UiPageValidationId" class="form-label"></label>
                    <select class="form-input" name="UiPageValidationId" id="uivalType" onchange="this.setAttribute('value',this.value)" asp-for="UiPageValidationId">
                        
                        @foreach (var item in ViewBag.Val)
                        {
                            if (@item.ValId == @ViewBag.vid)
                        {
                            <option value=@item.ValId selected>@item.ValName</option>
                        }
                            <option value=@item.ValId>@item.ValName</option>
                        }
                    </select>
                </div>
            </div>
           
            <div class="row ms-1 me-1">
                <div class="col-lg-8 col-sm-12 col-xs-12 mt-3 form-element right-pd-frm-input">
                    <input type="submit" value="Save" class="btn btn-lg btn-submit-print text-white" style=" background-color:#4250b5;" onclick="return DisplayProgressMessage(this, 'Saving...');" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
