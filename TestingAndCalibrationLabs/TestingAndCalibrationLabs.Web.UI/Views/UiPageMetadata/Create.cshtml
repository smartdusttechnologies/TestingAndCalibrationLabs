                <div style ="display:flex" class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-login right-pd-input">
                    <label for="UiPageTypeId" class="form-label"></label>
                    <select style="width:700px" class="form-input change" name="UiPageTypeId" id="UiPageType" onchange="this.setAttribute('value',this.value)" asp-for="UiPageTypeId">
                     <option  disabled="disabled" selected>Select Pages ... </option>
                       
                        @foreach (var item in ViewBag.UiPageTypes)
                        { 
                            <option value=@item.Id>@item.Name </option>
                        }
                    </select><i style="color:Teal; margin:15px;" data-bs-toggle="modal" onclick="myFunction('Select Pages')" data-bs-target="#exampleModal" class="fa" title="Need Help">&#xf05a;</i>
                </div>
                    

                <div style="display:flex" class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-login right-pd-input">
                    <label for="UiControlTypeId" class="form-label"></label>
                    <select style="widht:700px" class="form-input change" name="UiControlTypeId" id="UiControlType" onchange="this.setAttribute('value',this.value)" asp-for="UiControlTypeId">
                        <option disabled="disabled" selected>Select Control ... </option>
                       
                        @foreach (var item in ViewBag.UiControlTypes)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    </select><i style="color:Teal; margin:15px;" data-bs-toggle="modal" onclick="myFunction('Select Control')" data-bs-target="#exampleModal" class="fa" title="Need Help">&#xf05a;</i>
                </div>


                <div style="display:flex" class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-login right-pd-input">
                    <label for="DataType" class="form-label"></label>
                    <select style="widht:700px" class="form-input" name="DataTypeId" id="DataType" onchange="this.setAttribute('value',this.value)" asp-for="DataTypeId">
                        <option disabled="disabled" selected>Select Data Type ... </option>
                        @foreach (var item in ViewBag.DataTypes)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    </select><i style="color:Teal; margin:15px;" data-bs-toggle="modal" onclick="myFunction('Select Data Type')" data-bs-target="#exampleModal" class="fa" title="Need Help">&#xf05a;</i>
                </div>



                <div style="display:flex" class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-login right-pd-input">
                    <label for="ParentId" class="form-label"></label>
                    <select style="widht:700px" class="form-input" name="ParentId" id="ParentId" onchange="this.setAttribute('value',this.value)" asp-for="ParentId">
                        <option disabled="disabled" selected>Select Parent Name ... </option>
                        <option value="0">Root: 0  </option>
                        @foreach (var item in ViewBag.UiPageMetadata)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    </select><i style="color:Teal; margin:15px;" data-bs-toggle="modal" onclick="myFunction('Select Parent Name')" data-bs-target="#exampleModal" class="fa" title="Need Help">&#xf05a;</i>
                </div>



                <div style="display:flex" class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-login right-pd-input">
                    <label for="UiControlCategoryTypeId" class="form-label"></label>
                    <select style="widht:700px" style="display:flex" class="form-input" name="UiControlCategoryTypeId" id="UiControlCategoryTypeId" onchange="this.setAttribute('value',this.value)" asp-for="UiControlCategoryTypeId">
                        <option disabled="disabled" selected>Select Template ... </option>
                        @foreach (var item in ViewBag.UiControlCategoryType)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    </select><i style="color:Teal; margin:15px;" data-bs-toggle="modal" onclick="myFunction('Select Template')" data-bs-target="#exampleModal" class="fa" title="Need Help">&#xf05a;</i>
                </div>



                <div class="row ms-1 me-1">
                    <div style="display:flex" class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-login right-pd-input">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsRequired" />
                            @Html.DisplayNameFor(model => model.IsRequired)
                        </label>
                    </div>
                </div>

                <div style="display:flex" class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-login right-pd-input">
                    <label class="form-label" for="Name"></label>
                    <input class="form-input width-full" type="text" id="Name" name="Name" placeholder="Name" onchange="this.setAttribute('value',this.value)" asp-for="Name">
                    </select><i style="color:Teal; margin:15px;" data-bs-toggle="modal" onclick="myFunction('Name')" data-bs-target="#exampleModal" class="fa" title="Need Help">&#xf05a;</i>
                </div>


                <div style="display:flex" class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-login right-pd-input">
                    <label class="form-label" for="UiControlDisplayName"></label>
                    <input class="form-input width-full" type="text" id="UiControlDisplayName" name="UiControlDisplayName" placeholder="UiControlDisplayName" onchange="this.setAttribute('value',this.value)" asp-for="UiControlDisplayName">
                    </select><i style="color:Teal; margin:15px;" data-bs-toggle="modal" onclick="myFunction('UiControlDisplayName')" data-bs-target="#exampleModal" class="fa" title="Need Help">&#xf05a;</i>
                </div>

                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-login right-pd-input">
                    <input type="submit" value="Create" class="btn btn-lg btn-submit-print text-white" style=" background-color:#4250b5;" onclick="return DisplayProgressMessage(this, 'Saving...');" />
                </div>
            </div>
        </form>
    </div>
</div>
