@model TestingAndCalibrationLabs.Web.UI.Models.UiControlTypeDTO
@{
    ViewData["Title"] = "Edit";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<h1>Ui Control Type</h1>
<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
         <form asp-action="Edit" _lpchecked="1" class="mb-2" id="conForm" method="post" asp-controller="UiControlType" novalidate>
         <div asp-validation-summary="All"></div>
            <div class="row ms-1 me-1">
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control ">
                    <input class="form-input width-full black-border" type="text" id="Name" name="Name" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="Name">
                    <label class="form-label" for="Name">Name</label>
                </div>
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control " style=" margin-bottom:5px;">
                    <input class="form-input width-full black-border" type="text" id="DisplayName" name="DisplayName" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="DisplayName">
                    <label class="form-label" for="DisplayName">DisplayName</label>
                </div>
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control">
                    <select class="form-input width-full black-border" name="ControlCategoryId" id="ControlCategoryId" onchange="this.setAttribute('value',this.value)" asp-for="ControlCategoryId">
@*                        <option disabled="disabled" selected>Select Template ...</option>
*@                        @foreach (var item in ViewBag.ControlCategory)
                        {
                            if (@item.Id == @ViewBag.ControlCategoryId)
                            {
                                <option value=@item.ControlCategoryId selected>@item.ControlCategoryName</option>
                            }
                            else
                            {
                                <option value=@item.ControlCategoryId>@item.ControlCategoryName</option>
                            }
                        }
                    </select>
                    <label class="form-label" for="ControlCategoryId">ControlCategory</label>

                </div>
                 <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element right-pd-frm-input" style=" margin-bottom:5px;">
                <input type="submit" value="Save" class="btn btn-lg btn-submit-print text-white" style=" background-color:#4250b5;" onclick="return DisplayProgressMessage(this, 'Saving...');" />
            </div>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    