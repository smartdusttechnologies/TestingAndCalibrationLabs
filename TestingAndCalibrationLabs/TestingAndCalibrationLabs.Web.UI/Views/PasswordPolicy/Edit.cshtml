@model TestingAndCalibrationLabs.Web.UI.Models.PasswordPolicyDTO
@{
    // Set the page title
    ViewData["Title"] = "Edit";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<h1>Password Policy</h1>
<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" _lpchecked="1" class="mb-2" id="conForm" method="post" asp-controller="PasswordPolicy" novalidate>
            <div asp-validation-summary="All"></div>
            <div class="row ms-1 me-1">
                <!-- MinCaps Input -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control">
                    <input class="form-input width-full black-border" type="number" id="MinCaps" mincaps="MinCaps" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="MinCaps">
                    <label class="form-label" for="MinCaps">MinCaps</label>
                </div>
                <!-- MinSmallChars Input -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control" style=" margin-bottom:5px;">
                    <input class="form-input width-full black-border" type="number" id="MinSmallChars" minsmallchars="MinSmallChars" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="MinSmallChars">
                    <label class="form-label" for="MinSmallChars">MinSmallChars</label>
                </div>
                <!-- MinSpecialChars Input -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control" style=" margin-bottom:5px;">
                    <input class="form-input width-full black-border" type="number" id="MinSpecialChars" minspecialchars="MinSpecialChars" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="MinSpecialChars">
                    <label class="form-label" for="MinSpecialChars">MinSpecialChars</label>
                </div>
                <!-- MinNumber Input -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control">
                    <input class="form-input width-full black-border" type="number" id="MinNumber" minnumber="MinNumber" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="MinNumber">
                    <label class="form-label" for="MinNumber">MinNumber</label>
                </div>
                <!-- MinLength Input -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control" style=" margin-bottom:5px;">
                    <input class="form-input width-full black-border" type="number" id="MinLength" minloength="MinLength" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="MinLength">
                    <label class="form-label" for="MinLength">MinLength</label>
                </div>
                <!-- AllowUserName Input -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control">
                    <input class="form-input width-full black-border" type="number" id="AllowUserName" allowusername="AllowUserName" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="AllowUserName">
                    <label class="form-label" for="AllowUserName">AllowUserName</label>
                </div>
                <!-- DisAllPastPassword Input -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control" style=" margin-bottom:5px;">
                    <input class="form-input width-full black-border" type="number" id="DisAllPastPassword" disallpastpassword="DisAllPastPassword" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="DisAllPastPassword">
                    <label class="form-label" for="DisAllPastPassword">DisAllPastPassword</label>
                </div>
                <!-- DisAllowedChars Input -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control">
                    <input class="form-input width-full black-border" type="number" id="DisAllowedChars" disallowedchars="DisAllowedChars" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="DisAllowedChars">
                    <label class="form-label" for="DisAllowedChars">DisAllowedChars</label>
                </div>
                <!-- ChangeIntervalDays Input -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control">
                    <input class="form-input width-full black-border" type="number" id="ChangeIntervalDays" changeintervaldays="ChangeIntervalDays" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="ChangeIntervalDays">
                    <label class="form-label" for="ChangeIntervalDays">ChangeIntervalDays</label>
                </div>
                <!-- OrgId Input (Dropdown) -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control">
                    <select class="form-input width-full" name="OrgId" id="OrgId" onchange="this.setAttribute('value',this.value)" asp-for="OrgId">
                        <option disabled="disabled" selected>...</option>
                        @foreach (var item in ViewBag.organization)
                        {
                            if (item.Id == ViewBag.orgId)
                            {

                                <option selected value=@item.Id>@item.OrgName</option>
                            }else{
                            <option value=@item.Id>@item.OrgName</option>
                            }
                        }
                    </select>
                    <label for="OrgId" class="form-label">Oragnization</label>
                </div>
                <!-- Submit Button -->
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element right-pd-frm-input" style=" margin-bottom:5px;">
                    <input type="submit" value="Save" class="btn btn-lg btn-submit-print text-white" style=" background-color:#4250b5;" onclick="return DisplayProgressMessage(this, 'Saving...');" />
                </div>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        // Include validation scripts
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}