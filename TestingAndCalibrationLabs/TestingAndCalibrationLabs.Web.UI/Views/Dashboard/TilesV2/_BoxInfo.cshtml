
<div class="info-box mb-3 bg-warning">
    <span class="info-box-icon"><i class="fas fa-tag"></i></span>

    <div class="info-box-content">
        <span class="info-box-text">Inventory</span>
        <span class="info-box-number" id="inventory"></span>
    </div>

</div>

<div class="info-box mb-3 bg-success">
    <span class="info-box-icon"><i class="far fa-heart"></i></span>

    <div class="info-box-content">
        <span class="info-box-text">Mentions</span>
        <span class="info-box-number" id="mention"></span>
    </div>

</div>

<div class="info-box mb-3 bg-danger">
    <span class="info-box-icon"><i class="fas fa-cloud-download-alt"></i></span>

    <div class="info-box-content">
        <span class="info-box-text">Downloads</span>
        <span class="info-box-number" id="downloads"></span>
    </div>

</div>

<div class="info-box mb-3 bg-info">
    <span class="info-box-icon"><i class="far fa-comment"></i></span>

    <div class="info-box-content">
        <span class="info-box-text">Direct Messages</span>
        <span class="info-box-number" id="messages"></span>
    </div>

</div>

<script>

    $.ajax({
        type: "POST",
        url: "@Url.Action("DashboardV2Template","Dashboard")",
        success: function (BoxInfo) {

            document.getElementById("inventory").innerHTML = BoxInfo.inventory;
            document.getElementById("mention").innerHTML = BoxInfo.mention;
            document.getElementById("downloads").innerHTML = BoxInfo.downloads;
            document.getElementById("messages").innerHTML = BoxInfo.messages;

        }

    });

   



</script>