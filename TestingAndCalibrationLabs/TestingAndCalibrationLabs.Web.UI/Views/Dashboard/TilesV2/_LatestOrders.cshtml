
<div class="card">
    <div class="card-header border-transparent">
        <h3 class="card-title">Latest Orders</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Item</th>
                        <th>Status</th>
                        <th>Popularity</th>
                    </tr>
                </thead>
                <tbody id="Tabledata">
                    <tr>
                        <td>OR9842</td>
                        <td>Call of Duty IV</td>
                        <td><span class="badge badge-success">Shipped</span></td>
                        <td>
                            <div class="sparkbar" data-color="#00a65a">90,80,90,-70,61,-83,63</div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer clearfix">
        <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">Place New Order</a>
        <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">View All Orders</a>
    </div>
</div>

<script>

   
    $.ajax({
        type: "POST",
        url: "@Url.Action("LatestOrders","Dashboard")",
        success: function (LatestOrder) {

            for (position = 0; position < LatestOrder.orderid.length; position++) {


                let Element = document.getElementById("Tabledata");

                let row = document.createElement("tr");
                let Column1 = document.createElement("td");

                Column1.innerHTML = LatestOrder.orderid[position];
                row.appendChild(Column1);



                let Detail = document.createElement('td');
                row.appendChild(Detail);
                Detail.innerHTML = LatestOrder.item[position];





                const StatusData = document.createElement('td');
                const span = document.createElement('span');
                row.appendChild(StatusData);
                span.className = LatestOrder.badgeName[position];

                span.innerHTML = LatestOrder.status[position];
                StatusData.appendChild(span);



                const PopulationRow = document.createElement('td');
                row.appendChild(PopulationRow);
                var DataDiv = document.createElement('div');
                PopulationRow.appendChild(DataDiv);
                DataDiv.className = "sparkbar";

                DataDiv.innerHTML = LatestOrder.popularity[position];

                Element.appendChild(row);
            }

        }

    });


   
</script>
