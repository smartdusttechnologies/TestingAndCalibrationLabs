@model TestingAndCalibrationLabs.Web.UI.Models.UiControlCategoryTypeDTO
@{
    ViewData["Title"] = "Edit";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<h1>Ui Control Category Type</h1>
<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" _lpchecked="1" class="mb-2" id="conForm" method="post" asp-controller="UiControlCategoryType" novalidate>
            <div asp-validation-summary="All"></div>
            <div class="row ms-1 me-1">
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control ">
                    <input class="form-input width-full black-border" type="text" id="Name" name="Name" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="Name">
                    <label class="form-label" for="Name">Name</label>
                </div>
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control" style="padding-left:10px; padding-bottom:5px;">

                    <select class="form-input width-full " name="UiControlTypeId" id="UiControlTypeName" onchange="this.setAttribute('value',this.value)" asp-for="UiControlTypeId">

                        @foreach (var item in ViewBag.UiControlTypeName)
                        {
                            if (@item.Id == @ViewBag.UiControlTypeId)
                            {
                                <option value=@item.Id selected>@item.Name</option>
                            }
                            else
                            {
                                <option value=@item.Id>@item.Name</option>
                            }
                        }
                    </select>
                    <label for="UiControlTypeName" class="form-label">UiControlTypeId</label>
                </div>
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control " style=" margin-bottom:5px;">
                    <input class="form-input width-full black-border" type="text" id="Template" name="Template" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="Template">
                    <label class="form-label" for="Template">Template</label>
                </div>
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element right-pd-frm-input" style=" margin-bottom:5px;">
                    <input type="submit" value="Save" class="btn btn-lg btn-submit-print text-white" style=" background-color:#4250b5;" onclick="return DisplayProgressMessage(this, 'Saving...');" />
                </div>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}