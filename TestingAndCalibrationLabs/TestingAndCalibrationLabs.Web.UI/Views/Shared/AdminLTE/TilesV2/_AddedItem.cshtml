@{
    var value = ViewData["Control"] as DashboardV2;
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Recently Added Products</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    <div class="card-body p-0">
        <ul class="products-list product-list-in-card pl-2 pr-2" id="ItemsList">
          
        </ul>
    </div>
    <div class="card-footer text-center">
        <a href="javascript:void(0)" class="uppercase">View All Products</a>
    </div>
</div>


<script>
    var Data = JSON.parse('@Html.Raw(Json.Serialize(value.Detail))');
    


    for (var item = 0; item < 4; item++) {
        const Element = document.getElementById('ItemsList');
       
        var Items = document.createElement('li');
        Items.className = "item";
        Items.style = "background:#343a40;border-bottom-color: #6c757d;";
        Element.appendChild(Items);


        const ImageDiv = document.createElement('div');
        ImageDiv.className = "product-img";
        Items.appendChild(ImageDiv);

        const ImagesInfo = document.createElement('img');
        ImageDiv.appendChild(ImagesInfo);
        ImagesInfo.src = Data.productImg[item];
        ImagesInfo.className = "img-size-50";
        ImagesInfo.alt = "Product Image";


        const ProductList = document.createElement('div');
        Items.appendChild(ProductList);
        ProductList.className = "product-info";

        const SpanClass = document.createElement('span');
        ProductList.appendChild(SpanClass);
        SpanClass.className = "product-title";
        SpanClass.innerHTML = Data.name[item];

        var SpanCostElement = document.createElement('span');
        SpanCostElement.className = "badge badge-warning float-right";
        SpanClass.appendChild(SpanCostElement);
        SpanCostElement.innerHTML = Data.price[item];

        var DetailInfoSpan = document.createElement('span');
        DetailInfoSpan.className = "product-description";
        ProductList.appendChild(DetailInfoSpan);
        DetailInfoSpan.style = "color:white;";
        DetailInfoSpan.innerHTML = Data.productDetails[item];
        

    }

</script>
