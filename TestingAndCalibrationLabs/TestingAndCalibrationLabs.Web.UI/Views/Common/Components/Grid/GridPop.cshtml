<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="gridPopup">
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control " style="padding-left:10px; padding-bottom:5px;">
                    <input class="form-input width-full black-border" type="text" id="nameUltimate" name="Name" placeholder=" " onchange="this.setAttribute('value',this.value)">
                    <label class="form-label" for="Name">Name</label>
                </div>
                <div class="" style="margin-left:2rem;">
                    <button class="button-base ripple" id="createbtn">Save</button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" onclick="AddFields()" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script>
    oTable = $('#gridui').DataTable({
        lengthMenu: [
            [5, 10, 25, 50, -1],
            [5, 10, 25, 50, 'All'],
        ],
        scrollX: true,
    });
    $('#gridui').keyup(function () {
        oTable.search($(this).val()).draw();
    })
    let AddFields = () =>{
         let txt = $("#nameUltimate").val();
        oTable.row.add([txt, '<a href="/">Edit</a>|<a href="/edit">Delete</a>']).draw(false);
    }
</script>

                