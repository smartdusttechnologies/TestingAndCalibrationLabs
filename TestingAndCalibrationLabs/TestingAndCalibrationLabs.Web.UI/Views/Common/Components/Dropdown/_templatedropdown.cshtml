<script>
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("Index", "Template")',
           
            success: function (response) {
                debugger;
                for (var item = 0; item < response.length; item++) {
                    var TemplateId = response[item].fileId;
                    var TemplateName = response[item].templateName;
                    $('#DropdownItem').append("<option value='" + TemplateId + "'>" + TemplateName + "</option>");
