@model TestingAndCalibrationLabs.Business.Core.Model.UiPageMetadataModel
<div class="row ms-1 me-1">
    <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element left-pd-input">

        <input class="form-input width-full" name="@Model.UiControlDisplayName" type="date" onchange="this.setAttribute('value',this.value)" id="@Model.Id" >
    <label class="form-label" for="@Model.UiControlDisplayName">@Model.UiControlDisplayName</label>
        <span asp-validation-for="@Model.UiControlDisplayName" class="text-danger"></span>
    </div>
</div>