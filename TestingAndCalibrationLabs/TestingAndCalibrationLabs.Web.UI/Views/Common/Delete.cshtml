@model TestingAndCalibrationLabs.Web.UI.Models.RecordDTO
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <input type="hidden" asp-for="Id" />
        @foreach (var item in Model.Fields)
        {
            var Controlvalue = Model.FieldValues.Where(x => x.UiPageMetadataId == item.Id).FirstOrDefault()?.Value;
            <dt class="col-sm-2">
                @Html.DisplayFor(fieldItem => item.UiControlDisplayName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => @Controlvalue)
            </dd>
        }
    </dl>
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
