                    <label for="MultiValueControl" class="form-label">
                        MultiValueControl
                    </label>
                </div>
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control " style="padding-left:10px; padding-bottom:5px;">
                    <input class="form-input width-full black-border" type="text" id="ParentId" name="ParentId" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="ParentId">
                    <label class="form-label" for="ParentId">ParentId</label>
                </div>
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control " style="padding-left:10px; padding-bottom:5px;">
                    <input class="form-input width-full black-border" type="text" id="Orders" name="Orders" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="Orders">
                    <label class="form-label" for="Orders">Orders</label>
