@model TestingAndCalibrationLabs.Web.UI.Models.UiPageMetadataModuleBridgeDTO
@{
    ViewData["Title"] = "Create";
}
<h1>UiPageMetadataCharacteristics </h1>
<h4>Create</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" _lpchecked="1" class="mb-2" id="valForm" method="post" asp-controller="UiPageMetadataModuleBridge" novalidate>
            <div asp-validation-summary="All"></div>
            <div class="row ms-1 me-1">

                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-common-control ">
                    <select class="form-input width-full black-border" name="UiPageTypeId" id="UiPageType" onchange="this.setAttribute('value',this.value)" asp-for="UiPageTypeId">
                        <option disabled="disabled" selected>Select UiPageType ...</option>
                        @foreach (var item in ViewBag.PageList)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    </select>
                    <label for="UiPageTypeId" class="form-label">
                        UiPageTypeName
                    </label>
                </div>
                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-input">
                    <select class="form-input width-full black-border" name="UiPageMetadataId" id="UiPageMetadata" onchange="this.setAttribute('value',this.value)" asp-for="UiPageMetadataId">
                        <option disabled="disabled" selected>Select UiPageMetadata...</option>
                        @foreach (var item in ViewBag.PageMetadata)
                        {
                            <option value=@item.Id>@item.UiControlDisplayName</option>
                        }
                    </select>
                    <label for="UiPageMetadataId" class="form-label">
                        UiPageMetadataId
                    </label>
                </div>
               @* <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-input">
                    <label for="LookupCategoryId" class="form-label"></label>
                    <select class="form-input" name="UiControlDisplayName" id="UiPageMetadata" onchange="this.setAttribute('value',this.value)" asp-for="UiPageMetadataId">
                        <option disabled="disabled" selected>Select Validation Type ...</option>
                        @foreach (var item in ViewBag.PageMetadata)
                        {
                            <option value=@item.Id>@item.UiControlDisplayName</option>
                        }
                    </select>
                </div>*@
                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-input">
                    <select class="form-input width-full black-border" name="ModuleId" id="Module" onchange="this.setAttribute('value',this.value)" asp-for="ModuleId">
                        <option disabled="disabled" selected>Select ModuleName...</option>
                        @foreach (var item in ViewBag.ModuleName)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    </select>
                    <label for="ModuleId" class="form-label">
                        ModuleName
                    </label>
                </div>
                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-input">
                    <select class="form-input width-full black-border" name="MultiValueControl" id="MultiValueControl" onchange="this.setAttribute('value',this.value)" asp-for="MultiValueControl">
