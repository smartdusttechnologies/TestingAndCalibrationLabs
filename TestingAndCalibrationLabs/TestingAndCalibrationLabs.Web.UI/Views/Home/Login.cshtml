@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/d7a877bb0f.js" crossorigin="anonymous"></script>
</head>

<body class="bg-login">
    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
        <div class="container bg-white" style="max-width:450px;border-radius:5px;padding:10px;">
            <div class="login-border">
                <div>
                    <ul class="nav nav-tabs topnav" id="myTab" role="tablist" style="width:100%;">
                        <li class="nav-item login-tab-click" role="presentation" style="width:50%;">
                            <button class="nav-link login-tab-click active" id="home-tab" data-bs-toggle="tab" data-bs-target="#Sign-In" type="button" role="tab" aria-controls="home" aria-selected="true" href="#signInBoot" style="width:100%">Sign-In</button>
                        </li>
                        <li class="nav-item login-tab-click" role="presentation" style="width:50%;">
                            <button class="nav-link login-tab-click" id="profile-tab" data-bs-toggle="tab" data-bs-target="#Sign-Up" type="button" role="tab" aria-controls="profile" aria-selected="false" href="#signUpBoot" style="width:100%">Sign-Up</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="Sign-In" role="tabpanel" aria-labelledby="Sign-In-tab">

                            <div class="padding-login white-bg">
                                <div class="inputWithIcon">
                                    <input class="inputForSignIn" type="text" placeholder="Username or Email ID">
                                    <i class="fa fa-user fa-lg fa-fw iconForSignIn" style="top:15px;" aria-hidden="true"></i>
                                </div>
                                <div class="inputWithIcon">
                                    <input class="inputForSignIn" type="password" placeholder="Password" />
                                    <i class="fa-solid fa-lock iconForSignIn"></i>
                                </div>
                                <div class="form-floating mt-3 mb-3">
                                    <input id="RememberMe" class="" type="checkbox" name="rememberMe" />
                                    <span>
                                        <label for="RememberMe">Remember me</label>
                                    </span>
                                    <a class="align-content-end" style="float:right;">Forgot Password?</a>
                                </div>
                                <button type="submit" class="btn btn-success text-center btn-block">Sign-In</button>

                                <div class="row">
                                    <div class="col login-padding-left"><hr></div>
                                    <div class="col-auto" style="margin-top:3px;">or</div>
                                    <div class="col login-padding-right"><hr></div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <button class="btn btn-primary btn-block" style=" ">
                                            <i class="fab fa-twitter me-2 float-left"></i>Twitter
                                        </button>
                                    </div>
                                    <div class="col">
                                        <button class="btn btn-primary btn-block">
                                            <i class="fa-brands fa-facebook me-2 float-left"></i>Facebook
                                        </button>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col">
                                        <button class="btn btn-danger btn-block" style="">
                                            <i class="fa-brands fa-google me-2 float-left"></i>Google
                                        </button>
                                    </div>
                                    <div class="col" style="">
                                        <button class="btn btn-primary btn-block">
                                            <i class="fa-brands fa-linkedin me-2 float-left"></i>Linked-In
                                        </button>
                                    </div>
                                </div>
                                <p class="text-center" style="color:green;">Why Create an Account?</p>
                                <div>
                                    <p class=" text-center" style="font-size:12px;margin-bottom:0;">
                                        By creating the account you agreed to our
                                        <a style="color:green;">Privacy Policy</a>&
                                        <a style="color:green;">Cookie Policy</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="Sign-Up" role="tabpanel" aria-labelledby="Sign-Up-tab">

                            <div class="padding-login white-bg">
                                <div class="inputWithIcon">
                                    <input class="inputForSignIn" type="text" placeholder="Enter Username">
                                    <i class="fa-solid fa-user iconForSignIn"></i>
                                </div>
                                <div class="inputWithIcon">
                                    <input class="inputForSignIn" type="text" placeholder="Enter Email">
                                    <i class="fa-solid fa-envelope iconForSignIn"></i>
                                </div>
                                <div class="inputWithIcon">
                                    <input class="inputForSignIn" type="password" placeholder="Enter Password">
                                    <i class="fa-solid fa-key iconForSignIn"></i>
                                </div>
                                <div class="inputWithIcon">
                                    <input class="inputForSignIn" type="password" placeholder="Re-Enter Password">
                                    <i class="fa-solid fa-key iconForSignIn"></i>
                                </div>
                                <button type="submit" class="btn btn-success text-center btn-block">Sign-Up</button>

                                <div class="row">
                                    <div class="col login-padding-left"><hr></div>
                                    <div class="col-auto" style="margin-top:3px;">or</div>
                                    <div class="col login-padding-right"><hr></div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <button class="btn btn-primary btn-block" style=" ">
                                            <i class="fab fa-twitter me-2 float-left"></i>Twitter
                                        </button>
                                    </div>
                                    <div class="col">
                                        <button class="btn btn-primary btn-block">
                                            <i class="fa-brands fa-facebook me-2 float-left"></i>Facebook
                                        </button>
                                    </div>
                                </div>
                                <br />

                                <div class="row">
                                    <div class="col">
                                        <button class="btn btn-danger btn-block" style="">
                                            <i class="fa-brands fa-google me-2 float-left"></i>Google
                                        </button>
                                    </div>
                                    <div class="col" style="">
                                        <button class="btn btn-primary btn-block">
                                            <i class="fa-brands fa-linkedin me-2 float-left"></i>Linked-In
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>

</html>