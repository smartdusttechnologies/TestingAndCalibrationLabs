@model List<imageslideModelDTO>
@{


    ViewData["Title"] = "Home";
    
}
<link rel="stylesheet" href="~/css/ImageSlider.css" />
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
        <div class="carousel-indicators">
            @{
                int count = 0;
                @foreach (var Image in Model)
                {
                    if (count == 0)
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to=@count class="active" aria-current="true" aria-label="Slide "></button>
                        count = count + 1;
                    }
                    else
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to=@count aria-label="Slide " + count></button>
                        count = count + 1;
                    }
                }
            }
        </div>
        <div class="carousel-inner">
            @foreach (var Image in Model)
            {
                @if (Model.First() == Image)
                {
                    <div class="carousel-item active ">
                        <img src="@Image.Image" class="d-block " alt="...">
                        <div class="carousel-caption ">
                            <h5>@Image.header</h5>
                            <p>@Image.paragraph</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item  ">
                        <img src="@Image.Image" class="d-block " alt="...">
                        <div class="carousel-caption ">
                            <h5>@Image.header</h5>
                            <p>@Image.paragraph</p>
                        </div>
                    </div>
                }
            }
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>


