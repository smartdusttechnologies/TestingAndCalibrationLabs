@model TestingAndCalibrationLabs.Web.UI.Models.ApplicationDTO

@{
    ViewData["Title"] = "Create";

}

<h1>Application</h1>

<h4>Create</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
