@model TestingAndCalibrationLabs.Web.UI.Models.WorkflowStageDTO
@{
    ViewData["Title"] = "Create";
}
<h1>WorkflowStage</h1>
<h4>Create</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" _lpchecked="1" class="mb-2" id="pageForm" method="post" asp-controller="WorkflowStage" novalidate>
            <div asp-validation-summary="All"></div>
            <div class="row ms-1 me-1">

                <div class="col-lg-8 col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-frm-input">
                    <input class="form-input width-full black-border" type="text" id="Name" name="Name" placeholder=" " onchange="this.setAttribute('value',this.value)" asp-for="Name">
                    <label class="form-label" for="Name">Name</label>
                </div>

                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-input">
                    <label for="WorkflowId" class="form-label"></label>
                    <select class="form-input " name="WorkflowId" id="Workflow" onchange="this.setAttribute('value',this.value)" asp-for="WorkflowId">
                        <option disabled="disabled" selected>workflow ...</option>
                        @foreach (var item in ViewBag.Uiworkflow)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    </select>
                </div>


                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-input">
                    <label for="UiPageTypeId" class="form-label"></label>
                    <select class="form-input " name="UiPageTypeId" id="UiPageType" onchange="this.setAttribute('value',this.value)" asp-for="UiPageTypeId">
                        <option disabled="disabled" selected>uipage ...</option>
                        @foreach (var item in ViewBag.UiPageTypes)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    </select>
                </div>

              
                <div class="col-lg-8 col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-frm-input">
                    <input asp-for="Orders" class="form-control" />
                    <label asp-for="Orders" class="control-label"></label>
                    <span asp-validation-for="Orders" class="text-danger"></span>
                </div>

                <div class="col-lg-8 col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-frm-input">
                    <input type="submit" value="Create" class="btn btn-lg btn-submit-print text-white" style=" background-color:#4250b5;" onclick="return DisplayProgressMessage(this, 'Saving...');" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
