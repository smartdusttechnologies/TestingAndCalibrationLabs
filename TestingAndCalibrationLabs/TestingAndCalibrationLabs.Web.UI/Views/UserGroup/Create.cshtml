@model TestingAndCalibrationLabs.Web.UI.Models.UserGroupDTO

@{
    ViewData["Title"] = "Create";
}
<h1>User Group</h1>
<h4>Create</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" _lpchecked="1" class="mb-2" id="pageForm" method="post" asp-controller="UserGroup" novalidate>
            <div asp-validation-summary="All"></div>
            <div class="row ms-1 me-1">
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control" style="padding-left:10px; padding-bottom:5px;">

                    <select class="form-input width-full" name="GroupId" id="Group" onchange="this.setAttribute('value',this.value)" asp-for="GroupId">
                        <option disabled="disabled" selected>...</option>
                        @foreach (var item in ViewBag.Group)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    </select>


                    <label for="Group" class="form-label">GroupName</label>
                </div>

                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-common-control" style="padding-left:10px; padding-bottom:5px;">

                    <select class="form-input width-full" name="UserId" id="User" onchange="this.setAttribute('value',this.value)" asp-for="UserId">
                        <option disabled="disabled" selected>...</option>
                        @foreach (var item in ViewBag.User)
                        {
                            <option value=@item.Id>@item.UserName</option>
                        }
                    </select>


                    <label for="User" class="form-label">UserName</label>
                </div>

                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element right-pd-frm-input" style=" margin-bottom:5px;">
                    <input type="submit" value="Create" class="btn btn-lg btn-submit-print text-white" style=" background-color:#4250b5;" onclick="return DisplayProgressMessage(this, 'Saving...');" />
                </div>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

