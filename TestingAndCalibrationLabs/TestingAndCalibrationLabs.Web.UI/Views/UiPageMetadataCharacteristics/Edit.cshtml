@model TestingAndCalibrationLabs.Web.UI.Models.UiPageMetadataCharacteristicsDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>UiPageMetadataCharacteristics</h1>

<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" _lpchecked="1" class="mb-2" id="valForm" method="post" asp-controller="UiPageMetadataCharacteristics" novalidate>
            <div asp-validation-summary="All"></div>
            <div class="row ms-1 me-1">
                
                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-input">
                    <label for="UiPageMetadataId" class="form-label"></label>
                    <select class="form-input " name="UiPageMetadataId" id="UiPageMetadata" onchange="this.setAttribute('value',this.value)" asp-for="UiPageMetadataId">

                        @foreach (var item in ViewBag.DisplayName)
                        {
                            if (@item.Id == @ViewBag.UiPageMetadataId)
                            {
                                <option value=@item.Id selected>@item.UiControlDisplayName</option>
                            }
                            else
                            {
                                <option value=@item.Id>@item.UiControlDisplayName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="row ms-1 me-1">
                <div class="col-lg-8  col-sm-12 col-xs-12 mt-3 form-element-for-common-control  right-pd-input">
                    <label for="LookupCategoryId" class="form-label"></label>
                    <select class="form-input" name="LookupCategoryId" id="LookupCategory" onchange="this.setAttribute('value',this.value)" asp-for="LookupCategoryId">

                        @foreach (var item in ViewBag.ControlCategoryName)
                        {
                            if (@item.Id == @ViewBag.LookupCategoryId)
                            {
                                <option value=@item.Id selected>@item.Name</option>
                            }
                            else
                            {
                                <option value=@item.Id>@item.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="row ms-1 me-1">
                <div class="col-lg-12 col-sm-12 col-xs-12 mt-3 form-element-for-login right-pd-frm-input">
                    <input type="submit" value="Save" class="btn btn-lg btn-submit-print text-white" style=" background-color:#4250b5;" onclick="return DisplayProgressMessage(this, 'Saving...');" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
