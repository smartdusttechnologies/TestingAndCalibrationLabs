@model TestingAndCalibrationLabs.Web.UI.Models.SurveyModel
@{
    ViewData["Title"] = "Services";
}

<style>
    #snackbar {
        background-color: lightgreen;
        color: black;
        font-size: larger;
        padding: 20px;
        display: inline-block;
        position: absolute;
        bottom: 1cm;
        left: 15cm;
        transform: translateY(200);
        transition: all 300ms;
    }

        #snackbar.show {
            transform: translateY();
        }

    .btn {
        background-color: blue;
        width: 200px;
        font-size: 20px;
        padding: 20px;
        border-radius: 15px;
        border: 3px solid yellow;
        color: magenta;
        text-align: center;
    }

    form-group > label {
        top: 12px;
        left: 6px;
        position: relative;
        background-color: white;
        padding: 0px 0px 0px 0px;
    }

    .field-validation-error.form-input.width-full {
        color: orangered;
        font-weight: bold;
    }

    .field-validation-valid .form-input.width-full {
        display: none;
    }

    input.input-validation-error.form-input.width-full {
        border: 2px solid #f00;
    }

    input.input-validation-error#Comments.form-input.width-full {
        border: 2px solid #f00;
    }

    .validation-summary-errors {
        color: red;
        font-weight: bold;
        font-size: 1.1em;
    }

    .validation-summary-valid {
        display: none;
    }

    .submit-progress-bg {
        background-color: lightgray;
        opacity: .5;
    }

    .submit-progress {
        position: fixed;
        top: 50%;
        left: 50%;
        height: 6em;
        padding-top: 2.3em;
        z-index: 1;
        /* The following properties are the ones most likely to change */
        width: 20em;
        /* Set 'margin-left' to a negative number that is 1/2 of 'width' */
        margin-left: -10em;
        padding-left: 2.1em;
        background-color: black;
        color: white;
        -webkit-border-radius: 0.4em;
        -moz-border-radius: 0.4em;
        border-radius: 0.4em;
        box-shadow: 0.4em 0.4em rgba(0,0,0,0.6);
        -webkit-box-shadow: 0.4em 0.4em rgba(0,0,0,0.6);
        -moz-box-shadow: 0.4em 0.4em rgba(0,0,0,0.6);
    }

    /* Changing style for spinner */
    .submit-progress {
        padding-top: 2em;
        width: 23em;
        margin-left: -11.5em; /* Set to a negative number that is 1/2 of the width */
    }

        .submit-progress i {
            margin-right: 0.5em;
        }
</style>

@if (ViewBag.IsSuccess != null && ViewBag.IsSuccess)
{
    <div class="alert alert-success d-flex align-items-center" id="snackbar" role="alert">
        <div>
            <strong>Submitted Successfully!! Thank You</strong>
        </div>
    </div>
}

<!-- ** BEGIN POP-UP MESSAGE AREA ** -->
<div class="submit-progress hidden">
    <i class="fa fa-2x fa-spinner fa-spin"></i>
    <label>Please wait while Saving Data...</label>
</div>
<!-- ** END POP-UP MESSAGE AREA ** -->

<!--***Survey From Begins-->
