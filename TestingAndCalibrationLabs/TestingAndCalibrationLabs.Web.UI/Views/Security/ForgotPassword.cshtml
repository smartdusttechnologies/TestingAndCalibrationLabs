@model TestingAndCalibrationLabs.Web.UI.Models.ForgotPasswordDTO
@{
    ViewBag.Title = "Forgot Password";

}

<div class="padding-login bg-white d-flex flex-column min-vh-100 justify-content-center align-items-center bg-login" style="margin-bottom:80px;">

    @if (Model.Email!=null)
    {
     
        <form asp-action="ValidateOTP" asp-controller="Security" method="post">
        <input type ="hidden" asp-for="UserId">

         <div class="container bg-white" style="max-width:2050px;border-radius:6px;padding:10px;">
                <ul class="nav nav-tabs topnav" id="myTab" role="tablist" style="width:100%;">


                    <li class="nav-item login-tab-click" role="presentation" style="width:100%; margin:20px;">
                        <button class="nav-link login-tab-click active" id="home-tab" data-bs-toggle="tab" data-bs-target="#Sign-In" type="button" role="tab" aria-controls="home" aria-selected="true" href="#signInBoot" style="width:100%"><b>PLEASE ENTER YOUR OTP</b></button>
                    </li>
                </ul>

                <span class="red-color">** Please Enter Your  Verification Code Within 5-Minute</span>
           <div class="col-lg-20 col-sm-0 col-xs-0 mt-2 form-element-for-common-control right-pd-frm-input" style="margin:20px;">
            <input class="form-input width-full black-border" style="width:150px;" type="OTP" placeholder=" " name="OTP" asp-validation-for="OTP" , item.IsRequired onchange="this.setAttribute('value',this.value)" maxlength=6 asp-for ="OTP" required>
            <label class="form-label" style="color:gray;" for=OTP>
                OTP
                <span class="red-color">*</span>

            </label>
           </div>
           <button type="submit" class="btn btn-success text-center btn-block" onclick=" " style="width:80px; margin-left:20px">Submit</button>

          </div>

            <div class="d-flex justify-content-center fixed-bottom">
                <div class="alert alert-success" role="alert" id="snackbar">
                    <svg class="bi flex-shrink-0 me-2" width="34" height="9" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                    <span><strong>We Sent OTP Successfully on Your Register Email! Thank You</strong></span>
                </div>
            </div>
          
       
       </form>
       
    }
    else
    {
    <form asp-action="ForgotPassword" asp-controller="Security" method="post">

        <div class="container bg-white" style="max-width:2050px;border-radius:6px;padding:10px;">

            <ul class="nav nav-tabs topnav" id="myTab" role="tablist" style="width:100%;">


                <li class="nav-item login-tab-click" role="presentation" style="width:100%; margin:20px;">
                    <button class="nav-link login-tab-click active" id="home-tab" data-bs-toggle="tab" data-bs-target="#Sign-In" type="button" role="tab" aria-controls="home" aria-selected="true" href="#signInBoot" style="width:100%"><b>FORGOT PASSWORD</b></button>
                </li>
            </ul>
                <span class="red-color">** Please Enter your registered Email<br>*** We will send verification code on it </span>
            <div class="col-lg-20 col-sm-0 col-xs-0 mt-2 form-element-for-common-control right-pd-frm-input" style="margin:20px;">
                <input class="form-input width-full black-border" style="width:300px;" type="email" placeholder=" " name="Email" asp-validation-for="Email" , item.IsRequired onchange="this.setAttribute('value',this.value)" asp-for="Email" required>
                <label class="form-label" style="color:gray;" for=Email>
                    Email
                    <span class="red-color">*</span>

                </label>
            </div>
            <button type="submit" class="btn btn-success text-center btn-block" onclick=" " style="width:80px; margin-left:20px">Submit</button>

        </div>

          
    </form>
    }

</div>




